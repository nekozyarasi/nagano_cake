<div class="container px-5 px-sm-0">
  <div class="row">


      <div class="col-lg-8 mx-auto my-3">
        <div class="col-lg-3 text-center ">
          <h2 class="bg-secondary text-white rounded">会員一覧</h2>
        </div>

        <table class="table">
          <thead class="bg-light">
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </thead>
          <tobody>
            <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.id %></td>
                <td>
                  <%= link_to admin_customer_path(customer) do %>
                  <%= customer.family_name %><%= customer.first_name %>
                  <% end %>
                </td>
                <td><%= customer.email %></td>
                <td><%= customer.is_deleted %></td>
              </tr>
            <% end %>
          </tobody>
        </table>
        <%= paginate @customers %>


      </div>


  </div>

</div>