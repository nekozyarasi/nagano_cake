<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-lg-8 mx-auto my-3">

      <div class="col-lg-3 text-center ">
        <h2 class="bg-secondary text-white rounded"><%= @customer.family_name %><%= @customer.first_name %>さんの会員情報編集</h2>
      </div>

      <%= form_with model: @customer do |f| %>
      <div>

        <%= customer.id %>
      </div>
      <div>
        <label for="inputName">氏名</label>
        <%= f.text_field :family_name, autofocus: true, id:"inputName", placeholder:"苗字"%><%= f.text_field :first_name, autofocus: true, id:"inputName", placeholder:"名前"%>
      </div>
      <div>
        <label for="inputKanaName">フリガナ</label>
        <%= f.text_field :kana_family_name, autofocus: true, id:"inputKanaName", placeholder:"ミョウジ"%><%= f.text_field :kana_first_name, autofocus: true, id:"inputKanaName", placeholder:"ナマエ"%>
      </div>
      <div>
        <label for="inputPost">郵便番号</label>
        <%= f.text_field :post, autofocus: true, id:"inputPost", placeholder:"郵便番号"%>
      </div>
      <div>
        <label for="inputAdderss">住所</label>
        <%= f.text_field :address, autofocus: true, id:"inputAdderss", placeholder:"住所"%>
      </div>
      <div>
        <label for="inputPhone">電話番号</label>
        <%= f.text_field :phone, autofocus: true, id:"inputPhone", placeholder:"電話番号"%>
      </div>
      <div>
        <label for="inputEmail">メールアドレス</label>
        <%= f.text_field :email, autofocus: true, id:"inputEmail", placeholder:"メールアドレス"%>
      </div>
      <div>
        <label for="inputIs_deleted">会員ステータス</label>
      </div>
      <div>
        a
      </div>
      <% end %>

    </div>
  </div>
</div>