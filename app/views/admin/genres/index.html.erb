<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-lg-8 mx-auto my-3">

      <% provide(:title, "ジャンル一覧・追加") %>

      <div class="row">
        <div class="col-lg-6 text-center ">
          <h2 class="head-line title_h2 text-center admin_product_index bg-secondary text-white rounded">ジャンル一覧・追加</h2>
        </div>
      </div>

      <div class="row">
        <div class="col-12">
          <%= form_for @genre, :url => {:action => :create} do |f| %>
            <%= render "layouts/error_message", resource: @genre %>
            <div class="col-xs-offset-1 py-5">
              ジャンル名
              <%= f.text_field :name  %>
              <%= f.submit "新規登録", class: "btn btn-success" %>
            </div>
          <% end %>
          <div class="col-xs-8 col-xs-offset-2">
            <table class="table table-hover table-inverse ">
              <thead>
                <tr class="info">
                  <th>ジャンル</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @genres.each do |genre| %>
                  <tr>
                    <td class="text-left"><%= genre.name%></td>


                    <td class="genre-td"><%= link_to "編集する", edit_admin_genre_path(genre), class: "glyphicon glyphicon-pencil btn btn-success" %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>