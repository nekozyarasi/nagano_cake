<div class="container px-5 px-sm-0">
  <div class="row">


      <div class="col-lg-8 mx-auto my-3">
        <div class="text-center ">
          <h2 class="bg-secondary text-white rounded">注文商品一覧</h2>
        </div>

        <table class="table">
          <thead class="bg-light">
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </thead>
          <tobody>
            <% @orders.each do |order| %>
              <tr>
                <td>
                  <%= link_to admin_order_path(order) do %>
                  <%= order.created_at.to_s(:datetime_jp) %>
                  <% end %>
                  </td>
                <td>
                  <%= order.customer.family_name %><%= order.customer.first_name %>
                </td>
                <td><%= order.order_details.count %></td>
                <td><%= order.order_status %></td>
              </tr>
            <% end %>
          </tobody>
        </table>
        <%= paginate @orders %>



      </div>


  </div>

</div>