<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-lg-8 mx-auto my-3">

      <% provide(:title, "商品一覧") %>

      <div class="row">
        <div class="col-lg-6 text-center ">
          <h2 class="head-line title_h2 text-center admin_product_index bg-secondary text-white rounded">商品一覧</h2>
        </div>
        <div class="col-lg-6 text-center ">
          <%= link_to new_admin_item_path, data: {"turbolinks" => false}, class: "btn btn-warning pull-right new_product" do %>
            <i class="fas fa-plus"></i>
            新規商品登録
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="col-12 col-xs-offset-1">
          <table class="table table-hover  table-condensed">
            <thead>
              <tr class="info">
                <th>商品ID</th>
                <th>商品名</th>
                <th>税抜価格</th>
                <th>ジャンル</th>
                <th>ステータス</th>
              </tr>
            </thead>
            <tbody>
          		<% @items.each do |item| %>
          			<tr>
                  <td class="info col-xs-1">
                    <%= item.id %>
                  </td>
                  <td class="text-left">
                    <%= link_to admin_item_path(item), class: "btn-link" do %>
                      <%= item.name %>
                    <% end %>
                  </td>
                  <td class="text-right col-xs-1">
                    ¥<%= item.price.to_s(:delimited) %>
                  </td>
                  <td class="text-left col-xs-3">
                    <%= item.genre.name %>
                  </td>
                  <td class="col-xs-2">
                    <% if item.is_sale_status == true %>
            					<p class="text-success"><i class="fas fa-bullseye red text-success"></i>販売中</p>
            				<% elsif item.is_sale_status == false %>
            					<p class="text-secondary"><i class="fas fa-bullseye blue text-secondary"></i>販売停止中</p>
            				<% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @items %>
        </div>
      </div>

    </div>
  </div>
</div>