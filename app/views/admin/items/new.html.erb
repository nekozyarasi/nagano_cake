<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-lg-8 mx-auto my-3">

      <% provide(:title, "商品新規登録") %>

      <div class="row">
        <div class="col-lg-6 text-center ">
          <h2 class="head-line title_h2 text-center bg-secondary text-white rounded">商品新規登録</h2>
        </div>
      </div>

      <div class="row">
        <div class="col-12 col-xs-offset-1">
          <%= form_for(@item, url: admin_items_path, method: :post, class: "form-horizontal") do |f| %>
            <%= render "layouts/error_message", resource: @item %>
            <div class="col-xs-4 col-xs-offset-1">
              <div class="img_field"></div>
              <%= f.label :"商品画像", class: "col-sm-3 control-label" %>
      　　    　<%= f.file_field :item_image,accept: "image/*", class: "item_image" %>
            </div>
            <div class="col-text-center">
              <div class="form-group">
                <%= f.label :"商品名", class: "col-sm-3 control-label" %>
                <%= f.text_field :name, class: "col-sm-9 form-control-static name" %>
              </div>
              <div class="form-group">
                <%= f.label :"商品説明", class: "col-sm-3 control-label" %>
                <%= f.text_area :introduction, class: "col-sm-9 control-label introduction" %>
              </div>
              <div class="form-group">
                <%= f.label :"ジャンル", class: "col-sm-3 control-label" %>
                <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: '--選択してください--' %>
              </div>
              <div class="form-group">
                <%= f.label :"税抜価格", class: "col-sm-3 control-label" %>
                <%= f.text_field :price, class: "col-sm-3 form-control-static price" %>円
              </div>
              <div class="form-group">
                <%= f.label :"販売ステータス", class: "col-sm-3 control-label" %>
                <%= f.select :is_sale_status, [['販売中', true], ['販売停止', false]],selected: 2, class: "col-sm-9 is_sale_status" %>
              </div>
              <div class="actions col-xs-7">
          	    <%= f.submit "新規登録", class: "btn btn-success btn-lg pull-right" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>