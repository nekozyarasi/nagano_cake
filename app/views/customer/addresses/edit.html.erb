<div class="container">
  <div class="row my-4">
    <div class="col-4 text-center">
      <h3>配送先登録一覧</h3>
    </div>
    <% render "customer/addresses/error", obj: @address %>
    <div class="row"> 
    <table class="table table-borderless table-sm">
      <%= form_with model: @address, url: customer_address_path(@address), local: true do |f| %>
      <tr>
        <th><%= f.label :post,"郵便番号" %></th>
        <td class="col-7"><%= f.text_field :post, class: "form-controll", placeholder: "123-1234" %></td>
      </tr>
      <tr>
        <th><%= f.label :address,"住所" %></th>
        <td class = "col-7">
          <%= f.text_field :address, class: "form-control", placeholder: "大阪府大阪市浪速区00-00-00" %>
        </td>
      </tr>
      <tr>
        <th><%= f.label :name, "宛名" %></th>
        <td class = "col-7">
          <%= f.text_field :name, class: "form-control", placeholder: "猫 ひろし" %>
        </td>
        <td><%= f.submit "保存", class: "btn btn-success" %></td>
      </tr>
      <% end %>
    </table>
  </div> 
  </div>
</div>