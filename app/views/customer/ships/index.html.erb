<div class="container">
  <div class="row">
    <div class="col">
      <h3>配送先登録一覧</h3>
    </div>
  </div>
  <div class="row"> 
    <table class="table table-borderless table-sm">
      <%= form_with model: @ships local :true do |f| %>
      <tr>
        <th><%= f.label :post,"郵便番号" %></th>
        <td class="col-7"><%= f.text_field :post, class: "form-controll", placeholder: "123-1234" %></td>
      </tr>
      <tr>
        <th><%= f.label :address,"住所" %></th>
        <td class = "col-7">
          <%= f.text_field :address, class: "form-control", placeholder: "大阪府大阪市浪速区00-00-00" %>
        </td>
      </tr>
      <tr>
        <th><%= f.label :name, "宛名" %></th>
        <td class = "col-7">
          <%= f.text_field :name, class: "form-control", placeholder: "猫　蛇羅史" %>
        </td>
        <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
      </tr>
      <% end %>
    </table>
  </div> 
  <div class="row">
    <dive class ="col-8">
      <%#= render  %>
    </dive>
  </div>
</div>