<div class="container">
  <div class="text-center">
    
    <h3>新規会員登録</h3>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
     
      <div class="field col-xs-10">
        <%= f.label :"氏名" %></br>
        <%= f.label :family_name, "姓" %>
        <%= f.text_field :family_name, autofocus: true %>
        <%= f.label :"名" %>
        <%= f.text_field :first_name %>
      </div>
      
      <div class="field col-xs-10">
        <!--<label for="inputFamily_name" class="sr-only">姓</label>-->
        <!--<input type="family_name" id="inputFamily_name" class="form-control" placeholder="姓" required>-->
        <!--<label for="inputFirst_name" class="sr-only">名</label>-->
        <!--<input type="FirstFirst_name" id="inputFirst_name" class="form-control" placeholder="名" required>-->
     
        
        <%= f.label :kana_family_name, "氏名(フリガナ)" %></br>
        <%= f.label :kana_family_name, "セイ" %>
        <%= f.text_field :kana_family_name, autofocus: true %>
        <%= f.label :kana_first_name, "メイ" %>
        <%= f.text_field :kana_first_name, autofocus: true %>
      </div>
      
      <div class="field col-xs-10">
        <%= f.label :post, "郵便番号" %>
        <%= f.text_field :post %>
      </div>
      
      <div class="field col-xs-10">
        <%= f.label :address, "住所" %>
        <%= f.text_field :address %>
      </div>
      
      <div class="field col-xs-10">
        <%= f.label :phone, "電話番号" %>
        <%= f.text_field :phone %>
      </div>
      
      <div class="field col-xs-10">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      
      <div class="field col-xs-10">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
      
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      
      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>
  
    <%= link_to "既に会員の方", new_session_path(resource_name) %> 
  </div>
</div>

  
  
    
      
    
    
    
    
    
    
    
    
  
    
  
    
  
    
  
    
  
  
